---
import { ME_AVATAR } from "../config";
import Menus from "./menus.astro";
---

<header class="sticky z-50 top-0 backdrop-blur-lg transition-all select-none bg-gradient-to-b from-sky-500 to-sky-900">
  <div class="flex flex-row gap-8 items-center justify-between max-w-screen-md mx-auto h-24 px-4 sm:px-6">
    <a href="/" class="flex flex-row items-center justify-center gap-2">
      <img src={ME_AVATAR} alt="author avatar" class="w-64 rounded-full" />
    </a>
    <Menus />
  </div>
</header>
